#include <stdio.h>
#include <string.h>

int isPalindrome(char s[]) {
    int i, j;
    i = 0;
    j = strlen(s) - 1;

    while (i < j) {
        if (s[i] != s[j])
            return 0;   // not palindrome
        i++;
        j--;
    }
    return 1;   // palindrome
}

int main() {
    char str[100];

    printf("Enter a string: ");
    gets(str);

    if (isPalindrome(str))
        printf("It is a palindrome.\n");
    else
        printf("It is not a palindrome.\n");

    return 0;
}
