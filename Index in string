#include <stdio.h>
#include <string.h>

int findSubstring(char S[], char T[]) {
    int i, j, lenS, lenT;

    lenS = strlen(S);
    lenT = strlen(T);

    for (i = 0; i <= lenS - lenT; i++) {
        for (j = 0; j < lenT; j++) {
            if (S[i + j] != T[j])
                break;
        }
        if (j == lenT)   
            return i;    
    }

    return -1; 
}

int main() {
    char S[100], T[50];

    printf("Enter main string S: ");
    gets(S);

    printf("Enter substring T: ");
    gets(T);

    int pos = findSubstring(S, T);

    if (pos == -1)
        printf("Substring not found (-1)\n");
    else
        printf("Substring starts at index: %d\n", pos);

    return 0;
}
