#include <stdio.h>
#include <string.h>

void insertSubstring(char mainStr[], char subStr[], int pos) {
    char result[200];
    int i, j = 0;

    for(i = 0; i < pos; i++)
        result[j++] = mainStr[i];

    
    for(i = 0; subStr[i] != '\0'; i++)
        result[j++] = subStr[i];


    for(i = pos; mainStr[i] != '\0'; i++)
        result[j++] = mainStr[i];

    result[j] = '\0'; 

    printf("String after insertion: %s\n", result);
}

int main() {
    char mainStr[100], subStr[50];
    int pos;

    printf("Enter main string: ");
    gets(mainStr);  

    printf("Enter substring to insert: ");
    gets(subStr);

    printf("Enter position to insert at (starting from 0): ");
    scanf("%d", &pos);

    insertSubstring(mainStr, subStr, pos);

    return 0;
}
