#include <stdio.h>

int main() {
    char ch;
    int lines = 0, words = 0, chars = 0;
    int inWord = 0;

    printf("Enter text (Press CTRL+D or CTRL+Z to end):\n");

    while ((ch = getchar()) != EOF) {
        chars++;

        if (ch == '\n')
            lines++;

        if (ch == ' ' || ch == '\n' || ch == '\t') {
            inWord = 0;
        } else if (inWord == 0) {
            inWord = 1;
            words++;
        }
    }

    printf("\nCharacters = %d\n", chars);
    printf("Words      = %d\n", words);
    printf("Lines      = %d\n", lines);

    return 0;
}
