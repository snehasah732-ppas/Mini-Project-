#include <stdio.h>

int main() {
    float a, x, b, result;

    
    printf("Enter values of a, x, and b: ");
    scanf("%f %f %f", &a, &x, &b);

    
    if ((a * x - b) == 0) {
        printf("Error! Denominator becomes zero.\n");
    } else {
        
        result = (a * x) / (a * x - b);
        printf("The result of (a*x)/(a*x - b) = %.2f\n", result);
    }

    return 0;
}
